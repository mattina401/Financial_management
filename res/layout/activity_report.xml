<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ReportActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/reportacctsummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accountsummary"
            android:textColor="#33A7FF"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/summaryX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:background="#FFFFFF"
            android:onClick="OnXClick"
            android:contentDescription="@string/accountsummary"
            android:src="@drawable/x" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/summaryselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="@string/reportselect"
            android:textColor="#818286"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/reportspending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="#FFFFFF"
            android:contentDescription="@string/spending"
            android:onClick="OnSpendingClick"
            android:src="@drawable/spending" />

        <ImageButton
            android:id="@+id/reportcash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="#FFFFFF"
            android:contentDescription="@string/cash"
            android:onClick="OnCashClick"
            android:src="@drawable/cashflow" />

        <ImageButton
            android:id="@+id/reportincome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="#FFFFFF"
            android:contentDescription="@string/income"
            android:onClick="OnIncomeClick"
            android:src="@drawable/income" />
    </LinearLayout>

</LinearLayout>